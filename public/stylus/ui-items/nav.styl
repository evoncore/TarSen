

#context-menu
  opacity 0
  height 0
  position absolute
  background #333
  text-align center
  z-index -1
  width 54px
  text-align center
  bs_pattern((#333 / 2))
  ul
    position relative
    & .before
      content ''
      display block
      position absolute
      left -3px
      width 3px
      z-index 2
      background $mc
      transition .3s
      bs_pattern(($mc / 2))
    li
      display block
    a
      display block
      color #fff
      padding 15px
      transition()
      position relative
      margin-left -3px
      &.active
        color $mc
        &:before
          ts_pattern(($mc / 2))
      &:before
        font-size 16px
        text-shadow: 0 1px 0 #888, 
                     0 2px 0 #777
      &:hover
        color $mc
        &:before
          ts_pattern(($mc / 2))
        i
          opacity 1
          color #fff
      i
        display inline-block
        font-style normal
        position absolute
        background #555
        padding 16px
        top 0
        left 57px
        opacity 0
        letter-spacing 1px
        font-family $mf, $af
        max-width 120px
        bs_pattern((#555 / 2))
        &.align-left
          right (57 + 3)px
          left auto
        &.align-right
          left 57px
          right auto
  &.show
    opacity 1
    z-index 9998
    height auto
    