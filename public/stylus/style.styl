
// Reset

*
  outline none
  
ul
  padding 0
  margin 0
  
a
  &:hover, &:active, &:focus
    text-decoration none
  
// End Reset
  
html, body
  height 100%
  
body
  background url('../img/noise-pattern-with-subtle-cross-lines.png'), #F0EFED
  font-family $mf
  
h1
  color #222
  font-family $mf
  &.title
    text-transform uppercase
    margin-top 0
    margin-bottom 60px
    color #333
    font-weight 700
    letter-spacing 5px

.container
  padding 40px
  background #FBFBFB
  box-shadow 0 0 1px rgba(0,0,0,.2)
  margin-top 40px
  position relative
  bs_pattern((#FBFBFB / 2))
  
  
#root
  height 100%
  
.icon
  font-family $if